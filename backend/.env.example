# 應用配置
APP_NAME=Reptile Care System
APP_VERSION=1.0.0
DEBUG=True

# 資料庫
DATABASE_URL=sqlite:///./reptile_care.db

# Modbus RTU 配置
MODBUS_PORT=COM3
MODBUS_BAUDRATE=9600
MODBUS_PARITY=N
MODBUS_STOPBITS=1
MODBUS_BYTESIZE=8
MODBUS_TIMEOUT=3
MODBUS_DEVICE_ADDRESS=1

# 繼電器通道配置 (通道編號:功能描述)
RELAY_CH0=加熱燈1
RELAY_CH1=加熱燈2
RELAY_CH2=UVB燈
RELAY_CH3=日光燈1
RELAY_CH4=日光燈2
RELAY_CH5=夜燈
RELAY_CH6=加熱墊1
RELAY_CH7=加熱墊2
RELAY_CH8=霧化器
RELAY_CH9=風扇
RELAY_CH10=備用1
RELAY_CH11=備用2
RELAY_CH12=備用3
RELAY_CH13=備用4
RELAY_CH14=備用5
RELAY_CH15=備用6

# 溫度監控
TEMP_POLL_INTERVAL=60
TEMP_WARNING_LOW=20
TEMP_WARNING_HIGH=35

# 安全設定
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
